/* 用户动态 */
.blog{
    margin: 30rpx 20rpx;
}
.blogUser{
    width: 100%;
    height: 150rpx;
    margin-top: 25rpx;
    display: flex;
    flex-direction: row;
    background-color: white;
    position: relative;
}

.blogUser image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin: 15rpx 20rpx;
}
.blogInfo view{
    margin-top: 15rpx;
}
.blogPlace{
    font-size: 14px;
    color: gray;
}
.blogConcern{
    width: 180rpx;
    height: 90rpx;
    border-radius: 20rpx;
    background-color: #f8f9f4;
    position: absolute;
    right: 5%;
    top:20%;
    text-align: center;
    line-height: 90rpx;
    font-family: '黑体';
    font-size: 14px;
}

.blogVideo video{
    width: 100%;
    height: 450rpx;
    margin: 0 auto;
}

.blogContent{
    width: 100%;
    margin: 0 auto;
    height: 120rpx;
    /* text-indent: 50rpx; */
    text-align: left;
    font-size: 14px;
    color: #a2a2a2;
    line-height: 60rpx;
    overflow: hidden;
}
.blogbottom{
  position: relative;
    width: 100%;
    height: 50rpx;
    display: flex;
    color: #a2a2a2;
    flex-direction: row;
    margin-top: 5rpx;
}


.bnsbn {
  width: 80%;
  height: 50rpx;
  font-size: .8em;
  line-height: 50rpx;
  position: absolute;
  top: 0rpx;
}
.bnb {
  position: absolute;
  top: 0rpx;
